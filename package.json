{
  "name": "calculator-learning-demo-stateless",
  "version": "1.0.0",
  "description": "Streamable HTTP (stateless) reference implementation for MCP learning edition.",
  "type": "module",
  "main": "dist/stateless-production-server.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/stateless-production-server.ts",
    "start": "node dist/stateless-production-server.js",
    "start:production": "NODE_ENV=production node dist/stateless-production-server.js",
    "start:stateless": "node dist/stateless-production-server.js",
    "client": "tsx src/client.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "npm run test -- --testPathPattern=integration",
    "test:inspector": "npm run build && npx @modelcontextprotocol/inspector --cli http://localhost:3000/mcp --method tools/list",
    "test:stdio": "npm run build && npx @modelcontextprotocol/inspector --cli node dist/stateless-production-server.js --stdio",
    "test:health": "curl -s http://localhost:3000/health | jq",
    "test:detailed-health": "curl -s http://localhost:3000/health/detailed | jq",
    "test:metrics": "curl -s http://localhost:3000/metrics",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "ci": "npm run lint && npm run typecheck && npm run test:coverage && npm run build",
    "precommit": "lint-staged",
    "prepush": "npm run ci",
    "check": "npm run lint && npm run typecheck && npm run test"
  },
  "keywords": [
    "mcp",
    "calculator",
    "streamable-http",
    "stateless",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "cors": "^2.8.5",
    "eventsource": "^2.0.2",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "p-queue": "^8.0.1",
    "prom-client": "^15.0.0",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@modelcontextprotocol/inspector": "^0.3.0",
    "@types/cors": "^2.8.19",
    "@types/eventsource": "^1.1.15",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.11",
    "@types/node": "^22.10.6",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.1.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
